<Window x:Class="MainWindowsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainWindowsApp"
        xmlns:vm="clr-namespace:MainWindowsApp.VeiwModel"
        mc:Ignorable="d"
        Title="Custom Window" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.DataContext>
        <!-- <vm:AppViewModel/> -->
            <vm:AppViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="TextStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="IsEnabled" Value="False"/>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="24" Background="#001930">
        <Grid>
            <!-- Основной контент окна -->
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя полоса для перемещения -->
            <Border Grid.Row="0" Background="#001930" 
                    MouseLeftButtonDown="DragWindow"
                    CornerRadius="20 20 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Текст заголовка -->
                    <Border CornerRadius="8" HorizontalAlignment="Center" Background="#043056" Height="20" Width="256">
                        <Grid>
                            <TextBlock Grid.Column="0" Text="DXF - Nesting" 
                                   VerticalAlignment="Center" Margin="10,0"
                                   Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Кнопки управления окном -->
                    <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Margin="721,0,0,0">
                        <Border CornerRadius="10 10 10 10" Background="#043056" Height="25">
                            <Grid Width="60" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.531,0.5">
                                <Button x:Name="MinimizeButton" Content="_" 
                                    Width="31" Height="20" 
                                    Background="Transparent" Foreground="White"
                                    BorderThickness="0"
                                    Click="MinimizeButton_Click"
                                    HorizontalAlignment="Left"/>
                                <Button x:Name="CloseButton" Content="X" 
                                    Width="27" Height="20" 
                                    Background="Transparent" Foreground="White"
                                    BorderThickness="0"
                                    Click="CloseButton_Click"
                                    HorizontalAlignment="Left" Margin="33,0,0,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Указать путь -->
            <Border Grid.Row="1" Margin="0 0 0 380">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0">
                        <Grid Margin="0 4 0 4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" CornerRadius="16 0 0 0" Background="#114167">
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="White"
                                           FontSize="14">
                                    Путь к DXF для чтения
                                </TextBlock>
                            </Border>
                            <Border Grid.Column="2" CornerRadius="0 16 0 0" Background="#114167">
                                <Button Background="Transparent" BorderBrush="Transparent" Foreground="White" Click="ChangeReaderPath">
                                    Указать путь
                                </Button>
                            </Border>
                        </Grid>
                    </Border>
                    <Border Grid.Column="2">
                        <Grid Margin="0 4 0 4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" CornerRadius="16 0 0 0" Background="#114167">
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="White"
                                           FontSize="14">
                                    Путь для выгрузки
                                </TextBlock>
                            </Border>
                            <Border Grid.Column="2" CornerRadius="0 16 0 0" Background="#114167">
                                <Button Background="Transparent" BorderBrush="Transparent" Foreground="White" Click="ChangeWriterPath">
                                    Указать путь
                                </Button>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Основное меню -->
            <Border Grid.Row="2" Margin="0 40 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#114167" CornerRadius="0 0 16 16" Margin="0 0 0 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" CornerRadius="0 0 16 16" Background="#043056" Width="256" HorizontalAlignment="Center" Height="32" VerticalAlignment="Top">
                                <TextBlock Style="{StaticResource TextStyle}" FontSize="14">
                                    Статистика
                                </TextBlock>
                            </Border>
                            <Border Grid.Row="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Column="0" Grid.Row="0" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock Style="{StaticResource TextStyle}">
                                            Количество деталей
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="1" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock Style="{StaticResource TextStyle}">
                                            Минимальные размеры листа
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="2" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock Style="{StaticResource TextStyle}">
                                            Текущие размеры листа
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="3" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock Style="{StaticResource TextStyle}">
                                            Минимальное кол-во листов
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="4" CornerRadius="16 0 0 16" Background="#043056" Margin="0 16 0 0">
                                        <TextBlock Style="{StaticResource TextStyle}">
                                            Путь чтения
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="5" CornerRadius="16 0 0 16" Background="#043056" Margin="0 16 0 0">
                                        <TextBlock Style="{StaticResource TextStyle}">
                                            Путь записи
                                        </TextBlock>
                                    </Border>

                                    <Border Grid.Column="2" Grid.Row="0" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock Style="{StaticResource TextStyle}" x:Name="DetailsCount" Text="{Binding Frame.DetailsCount, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="1" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock Style="{StaticResource TextStyle}" x:Name="MinSize" Text="{Binding Frame.MinSize, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="2" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock Style="{StaticResource TextStyle}" x:Name="CurrentSize" Text="{Binding InputView.FrameSize, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="3" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock Style="{StaticResource TextStyle}" x:Name="MinCount" Text="{Binding Frame.MinFrames, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="4" CornerRadius="0 16 16 0" Background="#043056" Margin="0 16 0 0">
                                        <TextBlock Style="{StaticResource TextStyle}" x:Name="FileName" Text="{Binding Frame.NameOfFile, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="5" CornerRadius="0 16 16 0" Background="#043056" Margin="0 16 0 0">
                                        <TextBlock Style="{StaticResource TextStyle}" x:Name="SaveFolder" Text="{Binding Frame.NameOfFolder, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    <Border Grid.Column="2" Background="#114167" CornerRadius="0 0 16 16" Margin="0">
                        <Grid Margin="0 0 0 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="120"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" CornerRadius="0 0 16 16" Background="#043056" Width="256" HorizontalAlignment="Center" Height="32" VerticalAlignment="Top">
                                <TextBlock Style="{StaticResource TextStyle}" FontSize="14">
                                    Ввод и действия
                                </TextBlock>
                            </Border>
                            <Border Grid.Row="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Column="0" Grid.Row="0" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 10">
                                        <TextBlock Style="{StaticResource TextStyle}" Text="Размеры листа"/>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="1" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 10">
                                        <TextBlock Style="{StaticResource TextStyle}" Text="Отступ от краев"/>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="2" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 10">
                                        <TextBlock Style="{StaticResource TextStyle}" Text="Отступ между листов"/>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="3" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 10">
                                        <TextBlock Style="{StaticResource TextStyle}" Text="Отступ между деталей"/>
                                    </Border>

                                    <Border Grid.Column="2" Grid.Row="0" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 10">
                                        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="RealSize" Text="{Binding InputView.FrameSize, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="1" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 10">
                                        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="BorderPading" Text="{Binding InputView.PadingInside, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="2" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 10">
                                        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="ListPading" Text="{Binding InputView.FramePading, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="3" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 10">
                                        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="DetailsPading" Text="{Binding InputView.DetailPading, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                </Grid>
                            </Border>
                            
                            <Border Grid.Row="2">
                                <Border Background="#043056" Margin="45 45 45 0" Height="40" CornerRadius="16">
                                    <Button Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="12" Click="Button_Click" IsEnabled="False" x:Name="StartButton">
                                        Начать обработку
                                    </Button>
                                </Border>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
