<Window x:Class="MainWindowsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainWindowsApp"
        mc:Ignorable="d"
        Title="Custom Window" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="24" Background="#001930">
        <Grid>
            <!-- Основной контент окна -->
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя полоса для перемещения -->
            <Border Grid.Row="0" Background="#001930" 
                    MouseLeftButtonDown="DragWindow"
                    CornerRadius="20 20 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Текст заголовка -->
                    <Border CornerRadius="8" HorizontalAlignment="Center" Background="#043056" Height="20" Width="256">
                        <Grid>
                            <TextBlock Grid.Column="0" Text="DXF - Nesting" 
                                   VerticalAlignment="Center" Margin="10,0"
                                   Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Кнопки управления окном -->
                    <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Margin="721,0,0,0">
                        <Border CornerRadius="10 10 10 10" Background="#043056" Height="25">
                            <Grid Width="60" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.531,0.5">
                                <Button x:Name="MinimizeButton" Content="_" 
                                    Width="31" Height="20" 
                                    Background="Transparent" Foreground="White"
                                    BorderThickness="0"
                                    Click="MinimizeButton_Click"
                                    HorizontalAlignment="Left"/>
                                <Button x:Name="CloseButton" Content="X" 
                                    Width="27" Height="20" 
                                    Background="Transparent" Foreground="White"
                                    BorderThickness="0"
                                    Click="CloseButton_Click"
                                    HorizontalAlignment="Left" Margin="33,0,0,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Указать путь -->
            <Border Grid.Row="1" Margin="0 0 0 380">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0">
                        <Grid Margin="0 4 0 4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" CornerRadius="16 0 0 0" Background="#114167">
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="White"
                                           FontSize="14">
                                    Путь к DXF для чтения
                                </TextBlock>
                            </Border>
                            <Border Grid.Column="2" CornerRadius="0 16 0 0" Background="#114167">
                                <Button Background="Transparent" BorderBrush="Transparent" Foreground="White" Click="ChangeReaderPath">
                                    Указать путь
                                </Button>
                            </Border>
                        </Grid>
                    </Border>
                    <Border Grid.Column="2">
                        <Grid Margin="0 4 0 4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" CornerRadius="16 0 0 0" Background="#114167">
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="White"
                                           FontSize="14">
                                    Путь для выгрузки
                                </TextBlock>
                            </Border>
                            <Border Grid.Column="2" CornerRadius="0 16 0 0" Background="#114167">
                                <Button Background="Transparent" BorderBrush="Transparent" Foreground="White" Click="ChangeWriterPath">
                                    Указать путь
                                </Button>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Основное меню -->
            <Border Grid.Row="2" Margin="0 40 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#114167" CornerRadius="0 0 16 16" Margin="0 0 0 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" CornerRadius="0 0 16 16" Background="#043056" Width="256" HorizontalAlignment="Center" Height="32" VerticalAlignment="Top">
                                <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14">
                                    Статистика
                                </TextBlock>
                            </Border>
                            <Border Grid.Row="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Column="0" Grid.Row="0" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12">
                                            Количество деталей
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="1" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12">
                                            Минимальные размеры листа
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="2" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12">
                                            Текущие размеры листа
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="3" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12">
                                            Минимальное кол-во листов
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="4" CornerRadius="16 0 0 16" Background="#043056" Margin="0 16 0 0">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12">
                                            Путь чтения
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="5" CornerRadius="16 0 0 16" Background="#043056" Margin="0 16 0 0">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12">
                                            Путь записи
                                        </TextBlock>
                                    </Border>

                                    <Border Grid.Column="2" Grid.Row="0" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12" x:Name="DetailsCount">
                                            0000
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="1" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12" x:Name="MinSize">
                                            0000 : 0000
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="2" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12" x:Name="CurrentSize">
                                            0000 : 0000
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="3" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 16">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12" x:Name="MinCount">
                                            0000
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="4" CornerRadius="0 16 16 0" Background="#043056" Margin="0 16 0 0">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12" x:Name="FileName">
                                            FileName.dxf
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="5" CornerRadius="0 16 16 0" Background="#043056" Margin="0 16 0 0">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12" x:Name="SaveFolder">
                                            \FolderName\
                                        </TextBlock>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                    <Border Grid.Column="2" Background="#114167" CornerRadius="0 0 16 16" Margin="0">
                        <Grid Margin="0 0 0 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="120"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" CornerRadius="0 0 16 16" Background="#043056" Width="256" HorizontalAlignment="Center" Height="32" VerticalAlignment="Top">
                                <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14">
                                    Ввод и действия
                                </TextBlock>
                            </Border>
                            <Border Grid.Row="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Column="0" Grid.Row="0" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 10">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12">
                                            Размеры листа
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="1" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 10">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12">
                                            Отступ от краев
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="2" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 10">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12">
                                            Отступ между листов
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="0" Grid.Row="3" CornerRadius="16 0 0 16" Background="#043056" Margin="0 0 0 10">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12">
                                            Отступ между деталей
                                        </TextBlock>
                                    </Border>

                                    <Border Grid.Column="2" Grid.Row="0" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 10">
                                        <TextBox Foreground="White" FontSize="12" Background="Transparent" BorderBrush="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" x:Name="RealSize" Text="0000 : 0000" TextChanged="RealSize_TextChanged"/>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="1" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 10">
                                        <TextBox Foreground="White" FontSize="12" Background="Transparent" BorderBrush="Transparent" Margin="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" x:Name="BorderPading">
                                            0000
                                        </TextBox>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="2" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 10">
                                        <TextBox Foreground="White" FontSize="12" Background="Transparent" BorderBrush="Transparent" x:Name="ListPading" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                            0000
                                        </TextBox>
                                    </Border>
                                    <Border Grid.Column="2" Grid.Row="3" CornerRadius="0 16 16 0" Background="#043056" Margin="0 0 0 10">
                                        <TextBox Foreground="White" FontSize="12" Background="Transparent" BorderBrush="Transparent" x:Name="DetailsPading" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                            0000
                                        </TextBox>
                                    </Border>
                                </Grid>
                            </Border>
                            <Border Grid.Row="2">
                                <Border Background="#043056" Margin="45 45 45 0" Height="40" CornerRadius="16">
                                    <Button Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="12" Click="Button_Click">
                                        Начать обработку
                                    </Button>
                                </Border>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
