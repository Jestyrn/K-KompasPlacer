<Window x:Class="MainWindowsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainWindowsApp"
        mc:Ignorable="d"
        Title="Custom Window" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="24" Background="#001930">
        <Grid>
            <!-- Основной контент окна -->
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя полоса для перемещения -->
            <Border Grid.Row="0" Background="#001930" 
                    MouseLeftButtonDown="DragWindow"
                    CornerRadius="20 20 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Текст заголовка -->
                    <Border CornerRadius="8" HorizontalAlignment="Center" Background="#043056" Height="20" Width="256">
                        <Grid>
                            <TextBlock Grid.Column="0" Text="DXF - Nesting" 
                                   VerticalAlignment="Center" Margin="10,0"
                                   Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Кнопки управления окном -->
                    <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Margin="721,0,0,0">
                        <Border CornerRadius="10 10 10 10" Background="#043056" Height="25">
                            <Grid Width="60" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.531,0.5">
                                <Button x:Name="MinimizeButton" Content="_" 
                                    Width="31" Height="20" 
                                    Background="Transparent" Foreground="White"
                                    BorderThickness="0"
                                    Click="MinimizeButton_Click"
                                    HorizontalAlignment="Left"/>
                                <Button x:Name="CloseButton" Content="X" 
                                    Width="27" Height="20" 
                                    Background="Transparent" Foreground="White"
                                    BorderThickness="0"
                                    Click="CloseButton_Click"
                                    HorizontalAlignment="Left" Margin="33,0,0,0"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основное содержимое окна -->
            <Border Grid.Row="1" CornerRadius="0,0,20,20" Background="#001930" DragEnter="DragEnter" DragLeave="DragLeave" DragDrop.Drop="DragDrop" AllowDrop="True">
                <!-- Главное окно -->
                <Grid>
                    <Border CornerRadius="15" Background="#7B0A0F" Margin="10">
                        <!-- Описание действий -->
                        <Grid>
                            <Grid>
                                <Border Background="#B00301" Width="256" Height="60" Margin="10 10 10 180" CornerRadius="20">
                                    <Label x:Name="box" Content="asd" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                     Foreground="Black" HorizontalContentAlignment="Center"/>
                                </Border>
                            </Grid>
                            <Grid>
                                <Border Background="#B00301" Width="150" Height="30" Margin="10 100 10 10" CornerRadius="16">
                                    <Button Background="Transparent" Content="Указать путь" BorderThickness="0">
                                    </Button>
                                </Border>
                            </Grid>
                            <Rectangle Stroke="White" StrokeDashArray="4 2" StrokeThickness="2" RadiusX="14" RadiusY="14"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
